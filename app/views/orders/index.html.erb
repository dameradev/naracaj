<% @orders.each do |order| %>
  <% if order.items.any?  %>
  <%= order.user.address %>
    <% order.items.each do |item| %>
      <p> <%= item.product.title %></p>
      <p> <%= item.quantity %> Артикла</p>
      <p> <%= item.product.price %></p>
      <% end %>
      <%= link_to "Delete order", order_path(order), method: :delete %>
  <% end %>
<% end %>

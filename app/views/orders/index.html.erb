<% @orders.each do |order| %>
  <% if order.items.any?  %>
    <p><%= order.user.addresses.find_by_id(order.address).title %></p>
    <% order.items.each do |item| %>
      <p> <%= item.product.title %></p>
      <p> <%= item.quantity %></p>
      <p> <%= item.product.price %></p>
      <% end %>
      <%= link_to "Delete order", order_path(order), method: :delete %>
  <% end %>
<% end %>

<%= form_with(model: @firm, local: true) do |form| %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title, 'Наслов на ресторанот' %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :description, 'Артикли кои се продаваат во ресторанот' %>
        <%= form.text_field :description, class: 'form-control' %>
      </div>

    </div>
  </div>
  <hr>
  <div class="col-md-12">
    <h2>Храна</h2>
    <div>
     <%= form.fields_for (:products) do |product_form| %>
       <%= render 'product_fields', f: product_form %>
      <% end %>
     <div>
       <%= link_to_add_association 'Додај нова храна', form, :products %>
     </div>
     </div>
    <div class="form-group">
      <%= form.submit "Потврди", class: 'btn btn-primary btn-block ' %>
    </div>
  </div>
<% end %>

  <p>Категорија на храна</p>
  <%= f.collection_select(:category_id, Category.all, :id, :title,
                            {

                              include_blank: true
                            },
                            class: "form-control"
  ) %>
</div>
    <div class="form-group">
      <%= f.label :title, 'Наслов на храната' %>

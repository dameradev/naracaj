<%= form_with(model: @firm, local: true) do |form| %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

    </div>
  </div>
  <hr>
  <div class="col-md-12">
    <h2>Food</h2>
    <div>
     <%= form.fields_for(:product_categories, ProductCategory.new) do |product_cat_form| %>
        <%= product_cat_form.fields_for(:product, Product.new) do |product_form| %>
          <div class="form-group">
            <%= product_form.label :title %>
            <%= product_form.text_field :title, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= product_form.label :price %>
            <%= product_form.number_field :price, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= product_form.label :description %>
            <%= product_form.text_field :description, class: 'form-control' %>
          </div>
        <% end %>
     <% end %>

     </div>
    <div class="form-group">
      <%= form.submit "Create Firm", class: 'btn btn-primary btn-block ' %>
    </div>
  </div>
<% end %>

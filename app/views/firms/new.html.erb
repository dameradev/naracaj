<%= form_with(model: @firm, local: true) do |form| %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

    </div>
  </div>
  <hr>
  <div class="col-md-12">
    <h2>Food</h2>
    <div>
     <%= form.fields_for(:product_categories, ProductCategory.new) do |product_cat_form| %>
       <%= render 'product_category_fields', f: product_cat_form %>
     <div>
       <%= link_to_add_association 'Add Technology', form, :product_categories %>
     </div>
     <% end %>
     </div>
    <div class="form-group">
      <%= form.submit "Create Firm", class: 'btn btn-primary btn-block ' %>
    </div>
  </div>
<% end %>
